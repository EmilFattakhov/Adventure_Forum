<div class='row'>
  <div class='col-2'>
    <% if @tag.present? %>
      <h6>
        Showing products tagged by:
        <span class="badge badge-pill badge-primary">
          <%= @tag.name %>
        </span>
      </h6>
    <% end %>
  </div>

  <div class='col-10'>
    <div class='list-group'>
      <% @products.each do |product| %>
        <%= link_to product do %>
          <li class='list-group-item'>
            <p><span class='badge badge-light'><%= product.id %></span> <%= product.title %></p>
            <small>Last Updated: <%= time_ago_in_words product.updated_at %></small>
          </li>
        <% end %>
      <% end %>
    </div>
  </div>
</div> 
